<!-- views/detail.ejs -->
<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <title><%= boardTitle || '게시판' %></title>
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <h1><%= boardTitle %></h1>

    <nav>
      <a href="/gauje/free">자유 게시판</a> |
      <a href="/gauje/notice">공지사항</a>

      <span style="float:right;">
        <% if (currentUser) { %>
          <span>현재 이름: <%= currentUser.displayName %></span>
          <a href="/auth/profile">프로필 수정</a>
          <form method="post" action="/auth/logout" style="display:inline;">
            <button type="submit">로그아웃</button>
          </form>
        <% } else { %>
          <a href="/auth/login">로그인</a>
          <a href="/auth/register">회원가입</a>
        <% } %>
      </span>
    </nav>
    <hr>


  <hr>

  <h2><%= post.title %></h2>
  <p>
    작성자: <%= post.writer %> |
    조회수: <%= post.views %> |
    작성일: <%= post.created_at.toISOString().slice(0, 19).replace('T', ' ') %>
  </p>

  <pre style="white-space: pre-wrap;"><%= post.content %></pre>

  <hr>

  <form method="get" action="/gauje/<%= boardType %>">
    <button type="submit">목록</button>
  </form>

  <form method="get" action="/gauje/<%= boardType %>/<%= post.id %>/edit" style="display:inline;">
    <button type="submit">수정</button>
  </form>

  <form method="post" action="/gauje/<%= boardType %>/<%= post.id %>/delete" style="display:inline;">
    <button type="submit" onclick="return confirm('삭제하시겠습니까?');">삭제</button>
  </form>
</body>
</html>
